    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:layout_weight="1"
    tools:context=".UserListActivity">

    <TextView
        android:id="@+id/header_title"
        android:layout_width="match_parent"
